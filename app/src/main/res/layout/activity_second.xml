<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageButton
        android:id="@+id/ibttn_plus"
        android:layout_width="94dp"
        android:layout_height="87dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txt_counter"
        app:layout_constraintTop_toBottomOf="@+id/txt_counter"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="@drawable/green_plus" />

    <ImageButton
        android:id="@+id/ibttn_minus"
        android:layout_width="98dp"
        android:layout_height="91dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibttn_plus"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831"
        app:srcCompat="@drawable/red_minus" />

    <ImageButton
        android:id="@+id/ibttn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/txt_counter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.585"
        app:srcCompat="@drawable/settings" />

    <TextView
        android:id="@+id/txt_counter"
        android:layout_width="225dp"
        android:layout_height="237dp"
        android:layout_marginBottom="56dp"
        android:text="@string/counter"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="180dp"
        app:layout_constraintBottom_toTopOf="@+id/ibttn_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>